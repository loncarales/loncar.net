# Editor configuration, see https://editorconfig.org

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{md,mkdn}]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.toml]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
